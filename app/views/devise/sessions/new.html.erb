<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class: "well form-vertical"}) do |f| %>
  <h2>Sign in</h2>
  <p><%= f.label :email %><br />
  <%= f.email_field :email , {class: "input-xxxlarge"} %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password, {class: "input-xxxlarge"} %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me , {class: "checkbox inline"}%></p>
  <% end -%>

  <p><%= f.submit "Sign in", {class: "btn btn-large btn-primary"} %></p>
  <%= render :partial => "devise/shared/links" %>
<% end %>