<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {class: "well form-vertical"}) do |f| %>

  <h2>Sign up</h2>
  <%= devise_error_messages! %>

  <p><%= f.label :email %><br />
  <%= f.email_field :email, {class: "input-xxxlarge"} %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password, {class: "input-xxxlarge"} %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, {class: "input-xxxlarge"} %></p>

  <p><%= f.submit "Sign up", {class: "btn btn-large btn-primary"} %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
