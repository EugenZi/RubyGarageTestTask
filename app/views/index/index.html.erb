<div class="head">
  <h1></h1>
</div>
<div ng-controller="ProjectsController" class="block">
    <div class="item" ng-repeat="p in itemsList">
      <table class="fill">
          <thead>
              <tr class="block_top">
                <th>
                  <img src="/img/todo_head_left.jpg" alt="description">
                </th>
                <th>
                  <form class="edit_todo_list disabled" action="/update_todo_list.json?id={{p.id}}" method="get">
                        <input ng-model="text" ng-change="saveTodoList($event)" type="text" value="{{p.name}}" disabled="disabled" class="list_name disabled" name="name">
                  </form>
                </th>
                <th>
                  <a href="#" ng-click="editTodoList($event)">
                    <img src="/img/todo_edit.jpg" alt="description">
                  </a>
                  <a href="/delete_todo_list?id={{p.id}}" ng-click="deleteTodoList($event)">
                    <img src="/img/todo_del.jpg" alt="description">
                  </a>
                </th>
                <th>
                  
                </th>
              </tr>
              <tr class="block_middle" ng-controller="TasksController">
                  <th>
                      <img src="/img/plus.jpg" alt="" ng-click="clicker($event)">
                  </th>
                  <th class="add_task" colspan="3">
                      <form action="/add_task?list_id={{p.id}}" ng-submit="addTodo($event)">
                        <div class="input-append">
                          <input id="appendedInputButtons" type="text" name="title" value="Start typing here to create a task...">
                          <button class="btn add_task_btn" type="submit"></button>
                        </div>
                      </form>
                  </th>
              </tr>
          </thead>
          <tbody>
              <tr ng-repeat="l in p.tasks">
                <td class="checkbox">
                  <input type="checkbox" name="cancel" value="{{l.id}}">
                </td>
                <td>{{l.name}}</td>
                <td>{{l.created_at}}</td>
                <td>{{l.updated_at}}</td>
              </tr>
          </tbody>
      </table>
    </div>
    <div id="form_hidden" class="item">
      <table border="1" class="fill">
          <thead>
              <tr class="block_top">
                <th>
                  <img src="/img/todo_head_left.jpg" alt="description">
                </th>
                <th>
                  <%= form_for @project, url: {action: "create_todo_list"} do |f| %>
                    <%= f.text_field :name %>
                  <% end %>
                </th>
                <th>
                  <a href="#" class="delete_empty_todo_list">
                    <img src="/img/todo_del.jpg" alt="description">
                  </a>
                </th>
                <th>
                  
                </th>
              </tr>
          </thead>
      </table>
    </div>
    <div class="add_todo">
      <a href="/projects/create" ng-click="addTodoList($event)">
        <img src="/img/add_todo.png" alt="add todo list" />
      </a>
    </div>
</div>